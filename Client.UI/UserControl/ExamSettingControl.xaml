<UserControl x:Class="Client.UI.UserControl.ExamSettingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.UI.UserControl"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!--定义行-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!--定义列-->
        <Border Name="BorderEffect" Grid.RowSpan="3" Grid.ColumnSpan="2" Background="{DynamicResource RegionBrush}" CornerRadius="0" />
        <Border Height="0" Name="BorderTitle" Grid.Row="0"  Grid.Column="0" CornerRadius="10,10,0,0" Background="{DynamicResource TitleBrush}" Style="{StaticResource BorderClip}">
            <hc:SimplePanel>
                <TextBlock Style="{StaticResource TextBlockDefault}" Foreground="White" Text="{Binding Message}"/>
            </hc:SimplePanel>
        </Border>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0"  Margin="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <ComboBox SelectedItem="{Binding GradSelectItem}" SelectionChanged="GradCombox_Selected" ItemsSource="{Binding GradeLst}" DisplayMemberPath="Name" SelectedValuePath ="Code" MinWidth="200" Margin="10" Grid.Column="0" hc:InfoElement.TitleWidth="auto" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="年级" Style="{StaticResource ComboBoxExtend}" Text="正文1"/>
                <ComboBox SelectedItem="{Binding TaskSelectItem}" ItemsSource="{Binding ExamTaskLst}" DisplayMemberPath="ExamName" SelectedValuePath ="ReviewExamTaskID" MinWidth="200" Margin="20,10,10,10"  Grid.Column="1" hc:InfoElement.TitleWidth="auto" hc:InfoElement.TitlePlacement="Left" hc:InfoElement.Title="考试任务" Style="{StaticResource ComboBoxExtend}" Text="正文1"/>
            </Grid>
        </StackPanel>
        <DataGrid ItemsSource="{Binding products}" Name="DGrid" Grid.Row="2" Grid.Column="0" HeadersVisibility="Column" RowHeaderWidth="0" AutoGenerateColumns="False"   >
            <DataGrid.Columns>
                <DataGridTextColumn Header="考试科目ID" Binding="{Binding ProductId}"/>
                <DataGridTextColumn Header="考试科目流程" Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
